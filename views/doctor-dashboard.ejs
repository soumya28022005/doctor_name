<%- include('partials/header.ejs') %>

<div class="dashboard-header">
    <h1>Welcome, Dr. <%= doctor.name %></h1>
    <p>Manage your appointments and queue.</p>
</div>

<div class="dashboard-grid">
    <div class="card">
        <h3>Live Queue Management</h3>
        
        <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 2rem; border-radius: 12px; margin-bottom: 1.5rem; text-align: center;">
            <h2 style="margin: 0; font-size: 2.5rem;">Currently Serving</h2>
       
             <div style="font-size: 4rem; font-weight: bold; margin: 1rem 0;">
               #<span id="currentNumber"><%= display.current || 0 %></span>
            </div>
            <p style="margin: 0; font-size: 1.2rem; opacity: 0.9;">
                Total Today: <%= display.total || 0 %> patients
            </p>
        </div>
        
        <% if (currentPatientInfo) { %>
            <div style="background: #f0f9ff; padding: 1.5rem; border-radius: 8px; border-left: 4px solid #0ea5e9; margin-bottom: 1rem;">
                <h4 style="color: #0ea5e9; margin-bottom: 0.5rem;">Current Patient</h4>
     
           <p style="margin: 0; font-size: 1.1rem; font-weight: 600;">
                    <%= currentPatientInfo.patientName %> (Queue #<%= currentPatientInfo.queueNumber %>)
                </p>
                <p style="margin: 0.5rem 0 0 0; color: #64748b;">
                  
                 Scheduled: <%= currentPatientInfo.time %> | Status: <%= currentPatientInfo.status %>
                </p>
            </div>
        <% } %>

        <% if (nextPatientInfo) { %>
            <div style="background: #fefce8; padding: 1rem; border-radius: 8px; border-left: 4px solid #eab308; margin-bottom: 1.5rem;">
                
                <h5 style="color: #eab308; margin-bottom: 0.5rem;">Up Next</h5>
                <p style="margin: 0;">
                    <%= nextPatientInfo.patientName %> (Queue #<%= nextPatientInfo.queueNumber %>)
                </p>
            </div>
        <% } %>

        <div style="display: flex; gap: 1rem; margin-bottom: 1.5rem;">
            <form action="/doctor/next-patient" method="POST" style="flex: 1;">
            <input type="hidden" name="doctorId" value="<%= doctor.id %>">
            <input type="hidden" name="clinicId" value="<%= selectedClinicId || '' %>">
            <button type="submit" class="btn" 
            style="width: 100%; background: linear-gradient(135deg, #10b981, #059669); font-size: 1.1rem; padding: 1rem;"
            <%= isClinicQueueCompleted ? 'disabled' : '' %>>
        ‚úÖ Patient Done - Next Please
    </button>
</form>
        </div>

        <div style="background: #e2e8f0; height: 8px; border-radius: 4px; overflow: hidden; margin-bottom: 1rem;">
            <div style="background: linear-gradient(135deg, #667eea, #764ba2); height: 100%; width: <%= display.total > 0 ? ((display.current / display.total) * 100).toFixed(2) : 0 %>%; transition: width 0.3s ease;"></div>
        </div>
        <p style="text-align: center; color: #64748b; font-size: 0.9rem; margin: 0;">
            Progress: <%= display.current %> of <%= display.total %> patients completed
        </p>
    </div>

    
    <div class="card">
        <h3>
            Today's Appointments Queue
            <% 
           
             if (selectedClinicId) {
                const selectedSchedule = schedules.find(s => s.clinicId == selectedClinicId);
                if (selectedSchedule) { %>
                    <span style="color: #64748b; font-weight: 500;">at <%= selectedSchedule.clinic.name %></span>
                <% }
            } 
            %>
        </h3>
        <% if(appointments.length > 0) { %>
            <div style="max-height: 500px; overflow-y: auto;">
                <% appointments.forEach(app => { %>
                    <%
                        let itemStyle = '';
                        const isCurrent = currentPatientInfo && currentPatientInfo.id === app.id;
                        if (app.status === 'Done') {
                            itemStyle = 'background: #dcfce7; border-left: 4px solid #22c55e;';
                        } else if (isCurrent) {
                            itemStyle = 'background: #dbeafe; border-left: 4px solid #3b82f6;';
                        }
                    %>
                    <div class="appointment-item" style="<%= itemStyle %>">
                         
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <div style="flex: 1;">
                       
                         <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem;">
                                    <%
                                        let badgeColor = '#64748b'; // default grey
                                        if (app.status === 'Done') {
                                            badgeColor = '#22c55e'; // green
                                        } else if (isCurrent) {
                                            badgeColor = '#3b82f6'; // blue
                                        }
                                    %>
                                    <span style="background: <%= badgeColor %>; color: white; padding: 0.25rem 0.75rem; border-radius: 20px; font-weight: bold; font-size: 0.9rem;">
                                        #<%= app.queueNumber %>
                                    </span>
                   
                                 <strong style="font-size: 1.1rem;"><%= app.patientName %></strong>
                                    <% if (app.status === 'Done') { %>
                                         <span style="color: #22c55e; font-size: 0.9rem;">‚úÖ Done</span>
                                    <% } else if (isCurrent) { %>
                                        <span style="color: #3b82f6; font-size: 0.9rem; font-weight: bold;">üëÜ Current</span>
                                    <% } %>
                                </div>
                          
                       
                                <div style="color: #64748b; font-size: 0.95rem;">
                                    Scheduled: <%= app.time %> | Status: 
                                    <span style="color: <%= app.status === 'Done' ? '#22c55e' : app.status === 'Confirmed' ? '#3b82f6' : '#f59e0b' %>;">
                                        <%= app.status %>
                                    </span>
             
                                 </div>
                            </div>

                            <form action="/doctor/update-appointment-status" method="POST" style="margin-left: 1rem;">
                                <input type="hidden" name="doctorId" value="<%= doctor.id %>">
                                <input type="hidden" name="appointmentId" value="<%= app.id %>">
               
                                 <select name="status" onchange="this.form.submit()" 
                                        style="padding: 0.25rem 0.5rem; border-radius: 4px; border: 1px solid #d1d5db; font-size: 0.9rem;">
                                    <option value="Confirmed" <%= app.status === 'Confirmed' ? 'selected' : '' %>>Confirmed</option>
                                    <option value="Waiting" <%= app.status === 'Waiting' ? 'selected' : '' %>>Waiting</option>
 
                                     <option value="Done" <%= app.status === 'Done' ? 'selected' : '' %>>Done</option>
                                    <option value="Absent" <%= app.status === 'Absent' ? 'selected' : '' %>>Absent</option>
         
                                 </select>
                            </form>
                        </div>
                    </div>
     
                 <% }) %>
            </div>
        <% } else { %>
            <div style="text-align: center; padding: 3rem; color: #64748b;">
                <p style="font-size: 1.2rem; margin: 0;">No appointments scheduled for today</p>
                <p style="margin: 0.5rem 0 0 0;">Enjoy your free time! üòä</p>
            </div>
        <% } %>
    </div>

    <div class="card">
        <h3>Add a New Clinic</h3>
        <form action="/doctor/add-clinic" method="POST" id="clinicForm">
        
             <input type="hidden" name="doctorId" value="<%= doctor.id %>">
            
            <div class="form-group" style="display: flex; gap: 20px;">
                <label style="font-weight: normal;"><input type="radio" name="action" value="join" checked onchange="toggleClinicForm()"> Join an Existing Clinic</label>
                <label style="font-weight: normal;"><input type="radio" name="action" value="create" onchange="toggleClinicForm()"> Create New Private Clinic</label>
            </div>

            <div id="joinClinicSection">
                <div class="form-group">
    
                     <label for="clinicId">Select Clinic</label>
                    <select id="clinicId" name="clinicId" required>
                        <option value="">-- Please select a clinic --</option>
                        <% clinics.forEach(c => { %>
 
                             <% if (!schedules.some(s => s.clinicId === c.id)) { %>
                                <option value="<%= c.id %>"><%= c.name %> - <%= c.address %></option>
                        
                         <% } %>
                        <% }) %>
                    </select>
                </div>
            </div>

            <div id="createClinicSection" style="display: none;">
     
                     <div class="form-group">
                    <label for="address">New Clinic Address</label>
                    <input type="text" id="address" name="address" placeholder="e.g., 789 Lake Road, Durgapur">
                </div>
            </div>
         
               
            <hr style="margin: 1.5rem 0;">
            <h4>Set Your Schedule for this Clinic</h4>
            <div class="form-group">
                <label for="startTime">Start Time</label>
                <input type="time" name="startTime" required>
            </div>
   
                   <div class="form-group">
                <label for="endTime">End Time</label>
                <input type="time" name="endTime" required>
            </div>
            
            <div class="form-group">
                
                <p><strong>Select Weekly Schedule:</strong></p>
                <div style="display: flex; flex-wrap: wrap; gap: 15px; margin-top: 5px;">
                    <label><input type="checkbox" class="day-checkbox-add" name="days" value="Sunday"> Sunday</label>
                    <label><input type="checkbox" class="day-checkbox-add" name="days" value="Monday"> Monday</label>
                    <label><input type="checkbox" class="day-checkbox-add" name="days" value="Tuesday"> Tuesday</label>
                    
                    <label><input type="checkbox" class="day-checkbox-add" name="days" value="Wednesday"> Wednesday</label>
                    <label><input type="checkbox" class="day-checkbox-add" name="days" value="Thursday"> Thursday</label>
                    <label><input type="checkbox" class="day-checkbox-add" name="days" value="Friday"> Friday</label>
                    <label><input type="checkbox" class="day-checkbox-add" name="days" value="Saturday"> Saturday</label>
                </div>
    
                          <div style="margin-top: 10px;">
                    <label style="font-weight: bold; color: #007bff;">
                        <input type="checkbox" id="select-all-days-add"> Every Day
                    </label>
                </div>
            </div>

            <p style="text-align: center; font-weight: bold; margin: 1rem 0;">OR</p>

            <div class="form-group">
                <label for="customSchedule"><strong>Enter Custom Schedule Rule:</strong></label>
                <input type="text" id="customSchedule" name="customSchedule" class="form-control" placeholder="e.g., 1st week of month">
            </div>
            
            <button type="submit"  class="btn btn-full">Submit Request</button>
        </form>
    </div>

    <div class="card">
        <h3>Your Schedule & Settings</h3>
        
        <div style="margin-bottom: 2rem;">
            <h4 style="color: #374151; margin-bottom: 1rem;">Your Clinics (Click to filter list)</h4>
            <ul class="appointment-list">
                <a href="/dashboard/doctor?userId=<%= doctor.id %>" style="text-decoration: none;">
                    <li class="appointment-item" style="<%= !selectedClinicId ? 'background-color: #e0e7ff;' : '' %>">
                        <strong>All Clinics Today</strong>
                    </li>
                </a>

                <% schedules.forEach(schedule => { %>
              
                   <li class="appointment-item" style="<%= (selectedClinicId == schedule.clinicId) ? 'background-color: #e0e7ff;' : '' %>">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <a href="/dashboard/doctor?userId=<%= doctor.id %>&clinicId=<%= schedule.clinicId %>" style="flex-grow: 1; text-decoration: none; color: inherit;">
              
                                 <strong><%= schedule.clinic.name %></strong><br>
                                <%= schedule.startTime %> - <%= schedule.endTime %><br>
                                <small><%= schedule.days %></small>
        
                             </a>
                            <form action="/doctor/delete-schedule" method="POST" onsubmit="return confirm('Are you sure you want to delete your schedule from this clinic?');" style="margin-left: 1rem;">
    
                                     <input type="hidden" name="doctorId" value="<%= doctor.id %>">
                                <input type="hidden" name="scheduleId" value="<%= schedule.id %>">
                              
                                 <button type="submit" class="btn btn-danger btn-small" style="padding: 0.25rem 0.5rem; font-size: 0.8rem;">Delete</button>
                            </form>
                        </div>
                    </li>
                <% }) %>
         
             </ul>
        </div>
        
        <% if(doctorRequests && doctorRequests.length > 0) { %>
            <div style="margin-bottom: 2rem;">
                <h4 style="color: #f59e0b;">Pending Clinic Requests</h4>
                <ul class="appointment-list">
   
                                   <% doctorRequests.forEach(req => { %>
                        <% const requestedClinic = clinics.find(c => c.id === req.clinicId); %>
                        <% if (requestedClinic) { %>
                  
                          <li class="appointment-item" style="background: #fefce8; border-left-color: #f59e0b;">
                                Request to join <strong><%= requestedClinic.name %></strong>
                                <br>
               
                                   <small>Status: <%= req.status %></small>
                            </li>
                        <% } %>
                    <% }) %>
    
                         </ul>
            </div>
        <% } %>


        <div  class="settings-grid">
            <div>
                <h4>Daily Patient Limit</h4>
                <form action="/doctor/set-limit" method="POST">
                    <input type="hidden" name="doctorId" value="<%= doctor.id %>">
                    <div style="display: flex; gap: 0.5rem;">
                        <input type="number" name="dailyLimit" value="<%= doctor.dailyLimit %>" 
                               style="flex: 1; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 4px;" required>
                        <button type="submit" class="btn btn-small">Set</button>
                    </div>
                </form>
            </div>

            <div>
                <h4>Consultation Time (minutes)</h4>
                <form action="/doctor/set-consultation-time" method="POST">
                    <input type="hidden" name="doctorId" value="<%= doctor.id %>">
                    <div style="display: flex; gap: 0.5rem;">
                        <input type="number" name="duration" value="<%= doctor.consultationDuration || 15 %>" 
                               style="flex: 1; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 4px;" required>
                        <button type="submit" class="btn btn-small">Set</button>
                    </div>
                </form>
            </div>
        </div>

        <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #e2e8f0;">
            <h4 style="color: #f59e0b;">Controls</h4>
            <form action="/doctor/reset-queue" method="POST" 
            onsubmit="return confirm('Are you sure you want to reset the queue counter? This will only set the patient number to 0, not delete the list.')" style="margin-bottom: 1rem;">
            <input type="hidden" name="doctorId" value="<%= doctor.id %>">
            <input type="hidden" name="clinicId" value="<%= selectedClinicId || '' %>">
            <button type="submit" class="btn" 
            style="background: linear-gradient(135deg, #f59e0b, #d97706); font-size: 0.9rem; width: 100%;">
                üîÑ Queue Counter Reset
    </button>
</form>
            <form action="/doctor/clear-list" method="POST" 
                  onsubmit="return confirm('Sotorkota! Apni ki ajker shob appointment muche felte chan? Ei kaaj-ti ferano jabe na.')">
                <input type="hidden" name="doctorId" value="<%= doctor.id %>">
      
                     <button type="submit" class="btn" 
                        style="background: linear-gradient(135deg, #ef4444, #dc2626); font-size: 0.9rem; width: 100%;">
                    üóëÔ∏è Clear Today's List
                </button>
            </form>
        </div>
    </div>
</div>

<% if(invitations && invitations.length > 0) { %>
    <div class="card">
        <h3>Clinic Invitations</h3>
        <ul class="appointment-list">
            <% invitations.forEach(inv => { %>
                <li class="appointment-item" style="background: #fffbeb; border-left: 4px solid #f59e0b;">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div>
                            <strong><%= inv.clinicName %></strong> has invited you to join.<br>
                            <small>Proposed Schedule: <%= inv.schedule.startTime %> - <%= inv.schedule.endTime %> on <%= inv.schedule.days %></small>
                        </div>
                        <div style="display: flex; gap: 0.5rem;">
                            <form action="/doctor/handle-invitation" method="POST">
                                <input type="hidden" name="doctorId" value="<%= doctor.id %>">
                                <input type="hidden" name="invitationId" value="<%= inv.id %>">
                                <input type="hidden" name="action" value="accept">
                                <button type="submit" class="btn btn-success btn-small">Accept</button>
                            </form>
                            <form action="/doctor/handle-invitation" method="POST">
                                <input type="hidden" name="doctorId" value="<%= doctor.id %>">
                                <input type="hidden" name="invitationId" value="<%= inv.id %>">
                                <input type="hidden" name="action" value="delete">
                                <button type="submit" class="btn btn-danger btn-small">Delete</button>
                            </form>
                        </div>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>
<% } %>

 <script>
    function toggleClinicForm() {
        const action = document.querySelector('input[name="action"]:checked').value;
        const joinSection = document.getElementById('joinClinicSection');
   
           const createSection = document.getElementById('createClinicSection');
        const clinicIdSelect = document.getElementById('clinicId');
        const addressInput = document.getElementById('address');
        const submitButton = document.querySelector('#clinicForm button[type="submit"]');

        if (action === 'join') {
            joinSection.style.display = 'block';
            createSection.style.display = 'none';
            clinicIdSelect.required = true;
    
               addressInput.required = false;
            submitButton.textContent = 'Send Join Request';
        } else {
            joinSection.style.display = 'none';
            createSection.style.display = 'block';
            clinicIdSelect.required = false;
            addressInput.required = true;
            submitButton.textContent = 'Create Private Clinic';
        }
    }
    document.addEventListener('DOMContentLoaded', toggleClinicForm);
    document.getElementById('select-all-days-add').addEventListener('change', function(event) {
        const isChecked = event.target.checked;
        const dayCheckboxes = document.querySelectorAll('.day-checkbox-add');
        dayCheckboxes.forEach(checkbox => {
            checkbox.checked = isChecked;
        });
    });
    setInterval(() => {
        if (document.visibilityState === 'visible') {
            window.location.reload();
        }
    }, 30000);
    const nextForm = document.querySelector('form[action="/doctor/next-patient"]');
    if (nextForm) {
        nextForm.addEventListener('submit', function(e) {
            if (!confirm(`Are you sure the consultation with the current patient is finished?`)) {
                e.preventDefault();
            }
        });
    }
</script>

<%- include('partials/footer.ejs') %>